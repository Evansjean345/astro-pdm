---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/navbar";
import data from "../../public/data.json";
import "../../assets/scss/astro-ecommerce.scss";
import CardCategory from "../components/products/cardCategory";
import ProductFeature from "../components/products/productFeature";
import Footer from "../components/footer";
import TestimonialsFade from "../components/promo/testimonialsFade";
import PromoSectionLarge from "../components/promo/promoSectionLarge";
---

<Layout title="home page">
  <main>
    <Navbar />
    <PromoSectionLarge
      title={"Collection is here"}
      full_description={data.products[0].full_description}
      pageHeaderBgImg={"https://images.unsplash.com/photo-1604866830893-c13cafa515d5?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"}
      pageHeaderMinVh="90vh"
    />
    <div class="container my-5">
      <div class="d-block text-center mb-5">
        <h3>Shop by category</h3>
        <a class="text-dark font-weight-bold" href="#"
          >Browse all categories &#62;</a
        >
      </div>
      <div class="row mb-5">
        {
          data.categories.slice(0, 4).map((category) => (
            <div class="col-md-6 col-lg-3">
              <CardCategory
                thumb_src={category.thumb_src}
                collection={category.collection}
                title={category.title}
              />
            </div>
          ))
        }
      </div>

      <PromoSectionLarge
        title="Basic Starter Pack"
        full_description={data.products[0].full_description}
        pageHeaderBgImg={"https://images.unsplash.com/photo-1481415004805-b5b5c1e19e9f?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NTB8fGxpdnJlc3xlbnwwfHwwfHx8MA%3D%3D"}
        pageHeaderMinVh="50vh"
        pageHeaderRadius="1rem"
      />
      <div class="my-5">
        <ProductFeature
          title="Product Features"
          images={data.products[2].images}
          full_description="Society has put up so many boundaries, so many limitations on what’s right and wrong that it’s almost impossible"
          featuresDetails={data.products[0].featuresDetails}
        />
      </div>
      <div class="mt-5 mb-10">
        <TestimonialsFade
          pageHeaderBgImg={"https://images.unsplash.com/photo-1519642918688-7e43b19245d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2676&q=80"}
          pageHeaderMinVh="50vh"
        />
      </div>

      <Footer />
    </div>
  </main>
</Layout>
